            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15.0sp" />
    </LinearLayout>
</RelativeLayout>
